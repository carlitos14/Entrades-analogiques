//*********************************VARIABLES************************************
const int xiulet = 9;       
const int pot0 = A0;         
int valPot0;
//***********************************SETUP**************************************
void setup()
{ 
  pinMode(xiulet, OUTPUT);  
}
//************************************LOOP**************************************
void loop()
{
  valPot0 = analogRead(pot0);

  tone(xiulet, 1500, valPot0); 
  delay(2*valPot0);
}
